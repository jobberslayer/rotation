<script>
$(function() {
  $("#avail_volunteers .pagination a").on("click", function() {
    $.getScript(this.href);
    return false;
  });
})
</script>
<table id="available_volunteers_table" class="volunteer_table">
  <tr>
    <th>Name</th><th>Email</th><th></th>
  </tr>
  <% if @unjoined.empty? %>
    <tr><td colspan="3">No volunteers</td></tr>
  <% end %>
  <% @unjoined.each do |v| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= v.full_name %></td>
      <td><%= v.email %></td>
      <td><%= link_to 'add', add_volunteer_group_path(@group.id, v.id) %></td> 
    </tr>
  <% end %>
</table>
<%= will_paginate @unjoined, param_name: 'avail_page'%>
